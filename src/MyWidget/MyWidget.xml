<?xml version="1.0" encoding="utf-8" ?>
<widget id="MyWidget.widget.MyWidget" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>MyWidget</name>
    <description>This widget is used for reversing strings.</description>

    <icon />

    <properties>
        <property key="textString" type="attribute" entityProperty="UserInputEntity">
            <caption>Text</caption>
            <category>Behavior</category>
            <description>The text string used by the widget.</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="mfToExecute" type="microflow" required="false" defaultValue="">
            <caption>Microflow</caption>
            <category>Behavior</category>
            <description>The microflow to execute on leave of text box.</description>
            <returnType type="Boolean" />
        </property>
        <property key="UserInputEntity" type="entity" required="false">
            <caption>Entity</caption>
            <category>Data Source</category>
            <description>The enity whose data is reversed.</description>
        </property>
    </properties>
</widget>

